{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": true,
    "maxSize": 1048576,
    "includes": [
      "**/*.{js,mjs,cjs,ts,mts,cts}",
      "**/*.{json,jsonc}",
      "**/*.md",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/lib/**",
      "!**/coverage/**",
      "!**/*.generated.*",
      "!**/*.gen.ts",
      "!**/*.d.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "bracketSpacing": true,
    "useEditorconfig": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": "off",
        "noForEach": "off",
        "noUselessCatch": "off",
        "noUselessConstructor": "off",
        "noUselessEmptyExport": "off",
        "noUselessFragments": "off",
        "noUselessRename": "off",
        "noUselessTernary": "off",
        "useOptionalChain": "off",
        "useSimplifiedLogicExpression": "off"
      },
      "correctness": {
        "noConstAssign": "error",
        "noInvalidUseBeforeDeclaration": "warn",
        "noNodejsModules": "off",
        "noUnusedFunctionParameters": "off",
        "noUnusedImports": "off",
        "noUnusedVariables": "off"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "security": {
        "noGlobalEval": "error"
      },
      "style": {
        "noDefaultExport": "off",
        "noImplicitBoolean": "off",
        "noParameterAssign": "off",
        "useConst": "off",
        "useExportType": "off",
        "useImportType": "off",
        "useFilenamingConvention": "off",
        "useNodejsImportProtocol": "off",
        "useTemplate": "off"
      },
      "suspicious": {
        "noConsole": "off",
        "noDebugger": "off",
        "noDoubleEquals": "warn",
        "noExplicitAny": "off",
        "noFocusedTests": "warn",
        "noSkippedTests": "off",
        "useAwait": "off"
      },
      "nursery": {
        "noFloatingPromises": "off",
        "noSecrets": "off"
      }
    }
  },
  "javascript": {
    "globals": [
      "console",
      "process",
      "Buffer",
      "__dirname",
      "__filename",
      "global",
      "globalThis",
      "module",
      "require",
      "exports"
    ],
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSpacing": true
    }
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "trailingCommas": "none"
    }
  },
  "overrides": [
    {
      "includes": [
        "**/bin/**",
        "**/scripts/**",
        "**/commands/**",
        "**/cli/**",
        "**/*.cli.{js,ts}",
        "**/*.script.{js,ts}",
        "**/index.{js,ts}"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          },
          "correctness": {
            "noUnusedVariables": "off",
            "noNodejsModules": "off"
          },
          "style": {
            "noParameterAssign": "off"
          },
          "nursery": {}
        }
      }
    },
    {
      "includes": [
        "**/*.test.{js,ts}",
        "**/*.spec.{js,ts}",
        "**/__tests__/**",
        "**/test/**",
        "**/tests/**"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off",
            "noFocusedTests": "error",
            "noSkippedTests": "off",
            "noExplicitAny": "off",
            "useAwait": "off"
          },
          "correctness": {
            "noUnusedVariables": "off"
          },
          "nursery": {
            "noSecrets": "off"
          }
        }
      }
    },
    {
      "includes": [
        "*.config.{js,ts}",
        "**/config/**",
        "**/configs/**",
        "**/rollup.config.*",
        "**/webpack.config.*",
        "**/vite.config.*",
        "**/tsup.config.*",
        "**/esbuild.config.*"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          },
          "suspicious": {
            "noConsole": "off"
          },
          "correctness": {
            "noUndeclaredVariables": "off",
            "noNodejsModules": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.{js,mjs,cjs}"
      ],
      "linter": {
        "rules": {
          "correctness": {
            "noUndeclaredVariables": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.{ts,mts,cts}"
      ],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off"
          },
          "complexity": {
            "noArguments": "error"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.md"
      ],
      "formatter": {
        "lineWidth": 80
      }
    }
  ]
}